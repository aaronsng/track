    <Button
        android:id="@+id/inspection_button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:backgroundTint="#fafafa"
        android:elevation="10dp"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/continue_inspection"
        android:textAllCaps="false"
        android:textColor="#d4d4d4"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/logout_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/tutorial_button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:backgroundTint="#eeeeee"
        android:elevation="10dp"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/tutorial_refresher"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspection_button" />

    <Button
        android:id="@+id/emergency_button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:backgroundTint="#eeeeee"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/emergency"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_button" />

    <Button
        android:id="@+id/feedback_button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:backgroundTint="#eeeeee"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/feedback"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emergency_button" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:backgroundTint="#eeeeee"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/log_out"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback_button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/good_evening"
        android:textColor="@color/black_overlay"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/according_to_schedule"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

