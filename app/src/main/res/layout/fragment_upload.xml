<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/textsize_Xsmall"
            android:adjustViewBounds="true"
            android:background="@drawable/rect_image"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:contextClickable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/holder" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/railLouR"
            style="@style/uploadPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="@string/railLouR"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/railLouR_spinner"
            app:layout_constraintTop_toTopOf="parent" />

        <lta.amazoning.track.NiceSpinner
            android:id="@+id/railLouR_spinner"
            android:layout_width="@dimen/standard_200"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spinner_upload_endmargin"
            android:fontFamily="@font/raleway_semibold"
            android:layout_weight="1"
            android:background="@drawable/rect_image"
            app:layout_constraintBottom_toBottomOf="@+id/railLouR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/railLouR" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/chFr"
            style="@style/uploadPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/raleway_semibold"
            android:text="@string/chFr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chFr_spinner"
            app:layout_constraintTop_toTopOf="parent" />

        <lta.amazoning.track.NiceSpinner
            android:id="@+id/chFr_spinner"
            android:layout_width="@dimen/standard_200"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:layout_marginEnd="@dimen/spinner_upload_endmargin"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="@+id/chFr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chFr" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>